/**index.wxss**/

.header {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5px #e0e0e0;
}

.header .plus-icon {
  width: 41rpx;
  height: 41rpx;
  margin-right: 20px;
}

.header .input-value {
  flex: 1;
  font-size: 28rpx;
}

/* todos长度为零时 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

.empty .title {
  font-size:60rpx;
  margin:200rpx 50rpx 50rpx;
  color:#444;
}

.empty .content {
  color:#666;
  text-align:center;
}

/* 代办 */
.todos {
  border: 1px solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  margin-top: 20rpx;
}

.todos .item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  border-bottom: 1px solid #e0e0e0;
}

.todos .item:last-child {
  border-bottom: none;
}

.todos .item .checkbox {
  margin-right: 20rpx;
}

.todos .item .name {
  flex: 1;
  font-size: 30rpx;
}
.todos .item.completed .name {
  text-decoration: line-through;
  color: #888;
}


.footer {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #777;
  margin: 30rpx 0;
  padding: 0 10rpx;
}

